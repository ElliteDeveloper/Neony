<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppNoActionTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>

    </style>


    <style name="ButtonWhiteBorder">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/btn_common</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">15dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonGreyBorder">
        <item name="android:textColor">@color/colorBorder</item>
        <item name="android:background">@drawable/btn_common</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">15dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonWhiteText">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/btn_common</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextTitleWithPink">
        <item name="android:textColor">@color/colorPink</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextTitleWithGrey">
        <item name="android:textColor">@color/colorBorder</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextLargeWithWhite">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextSmallWithWhite">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextSmallWithGray">
        <item name="android:textColor">@color/colorBorder</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextMainDarkGrey">
        <item name="android:textColor">@color/colorDarkGrey</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="TextMainWhite">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextPanelLabel">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextViewAll">
        <item name="android:textColor">@color/colorPink</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/view_all</item>
    </style>

    <style name="TabPanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/ic_panel_back</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="CustomSeekBar">
        <item name="android:minHeight">2dp</item>
        <item name="android:minWidth">2dp</item>
        <item name="android:maxHeight">2dp</item>
        <item name="android:maxWidth">2dp</item>
        <item name="android:thumbOffset">15dp</item>
        <item name="android:progressDrawable">@drawable/custom_seekbar</item>
        <item name="android:thumb">@drawable/circle</item>
    </style>
</resources>
