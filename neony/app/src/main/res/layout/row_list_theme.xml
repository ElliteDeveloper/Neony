<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/layout_item"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    >


    <com.ptnst.neon.neon.views.DynamicImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/img_thumb"
        android:scaleType="fitCenter"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:gravity="right|bottom"
        android:orientation="horizontal"
        android:id="@+id/layout_comment"
        android:layout_alignTop="@id/img_thumb"
        android:layout_alignBottom="@id/img_thumb"
        android:layout_alignLeft="@id/img_thumb"
        android:layout_alignRight="@id/img_thumb">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextSmallWithGray"
            android:textColor="@color/colorWhite"
            android:shadowColor="@color/colorBack"
            android:shadowDx="-1.0"
            android:shadowDy="1.0"
            android:shadowRadius="2.0"
            android:text="@string/photo_by"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextSmallWithGray"
            android:id="@+id/txt_user"
            android:clickable="true"
            android:textColor="@color/colorWhite"
            android:shadowColor="@color/colorBack"
            android:shadowDx="-1.0"
            android:shadowDy="1.0"
            android:shadowRadius="2.0"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextSmallWithGray"
            android:textColor="@color/colorWhite"
            android:shadowColor="@color/colorBack"
            android:shadowDx="-1.0"
            android:shadowDy="1.0"
            android:shadowRadius="2.0"
            android:text="@string/on"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextSmallWithGray"
            android:id="@+id/txt_unsplash"
            android:textColor="@color/colorWhite"
            android:shadowColor="@color/colorBack"
            android:shadowDx="-1.0"
            android:shadowDy="1.0"
            android:shadowRadius="2.0"
            android:text="@string/unsplash"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>




</RelativeLayout>