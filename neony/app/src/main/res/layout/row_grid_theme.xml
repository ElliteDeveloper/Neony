<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/layout_item"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/constraint_layout"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="V,1:1"
            android:id="@+id/img_thumb"
            android:scaleType="centerCrop"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/txt_title"
        style="@style/TextLargeWithWhite"
        android:textSize="16sp"
        android:shadowColor="@color/colorBack"
        android:shadowDx="-2.0"
        android:shadowDy="2.0"
        android:shadowRadius="2.0"
        android:gravity="center"
        android:layout_alignTop="@id/constraint_layout"
        android:layout_alignBottom="@id/constraint_layout"
        android:layout_alignLeft="@id/constraint_layout"
        android:layout_alignRight="@id/constraint_layout"
        />


</RelativeLayout>